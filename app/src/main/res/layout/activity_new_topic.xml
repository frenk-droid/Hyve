<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTopic"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/black_800">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Topic"
    android:textSize="24sp"
    android:textColor="@color/white_100"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:background="@drawable/roundgreybtn"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:textColorHint="@color/white_500"
        android:textColor="@color/white_100"
        />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
       android:background="@drawable/roundgreybtn"
        android:textColorHint="@color/white_500"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/description"
        android:textColor="@color/white_100"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="135dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:text="inserisci Foto Topic"
        android:textColor="@color/white_100"/>
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:onClick="uploadImage"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="uploadTopic"
        android:text="@string/ok"
        android:textColor="@color/white_100"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundcustombtn"/>

</LinearLayout>